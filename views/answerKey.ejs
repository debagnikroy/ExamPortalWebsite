.main{
  text-align: left;
  font-size: 15px;
    font-family: 'Josefin Sans', sans-serif;
}
.button {
  display: inline-block;
  border-radius: 4px;
  background-color: #222831;
  border: none;
  color: #FFFFFF;
  text-align: center;
  font-size: 18px;
  padding: 10px;
  width: 150px;
  transition: all 0.5s;
  cursor: pointer;
  margin: 5px;
}

