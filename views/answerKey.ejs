<div class="main" style="padding-top:80px;padding-left:10px">

<center>
  <h1><u> Answer Keys:- </u> </h1>
  <br/>
  </center>
  <br/><br/>
  <% for(var i=0;i< arr.length;i++){ %>
    <h3>Question <%- (i+1) %> :- <%- arr[i].question %></h3>
      <h4> a -> <%- arr[i].optionA %></h4>
      <h4> b -> <%- arr[i].optionB %></h4>
      <h4> c -> <%- arr[i].optionC %></h4>
      <h4> d -> <%- arr[i].optionD %></h4>
      <br/>
    <h3>Answer:-

      <% if (arr[i].correctAnswer == 'a'){ %>
        <h4> a -> <%- arr[i].optionA %></h4>
      <%}%>
      <% if (arr[i].correctAnswer == 'b'){ %>
        <h4> b -> <%- arr[i].optionB %></h4>
        <%}%>
      <% if (arr[i].correctAnswer == 'c'){ %>
        <h4> c -> <%- arr[i].optionC %></h4>
        <%}%>
      <% if (arr[i].correctAnswer == 'd'){ %>
        <h4> d -> <%- arr[i].optionD %></h4>
<%}%>

      <br/><br/><br/>

  <%} %>
